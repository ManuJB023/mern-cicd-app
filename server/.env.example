# Server Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# APPLICATION SETTINGS
# ================================

# Environment (development, production, test)
NODE_ENV=development

# Port for the server to run on
PORT=5000

# ================================
# DATABASE CONFIGURATION
# ================================

# MongoDB connection string
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/mernapp

MONGODB_URI=your_mongodb_connection_string_here

# ================================
# SECURITY
# ================================

# JWT secret for token signing
# Generate a strong, random secret: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_signing_key_here

# ================================
# CORS SETTINGS
# ================================

# Client URL for CORS (frontend URL)
CLIENT_URL=http://localhost:3000

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================

# Email service for password resets, notifications
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_email_password

# ================================
# RATE LIMITING (Optional)
# ================================

# Rate limiting configuration
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ================================
# FILE UPLOAD (Optional)
# ================================

# File upload settings
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# ================================
# LOGGING (Optional)
# ================================

# Log level (error, warn, info, debug)
# LOG_LEVEL=info

# ================================
# EXTERNAL SERVICES (Optional)
# ================================

# Redis for session storage (if using)
# REDIS_URL=redis://localhost:6379

# AWS S3 for file storage (if using)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET_NAME=your_s3_bucket_name
# AWS_REGION=us-east-1